# Network Configuration
RPC_URL=https://rpc-amoy.polygon.technology
CHAIN_ID=80002

# ============ Role Separation ============
# Three distinct roles in the x402 OTC API system:

# 1. FACILITATOR (Server/Orchestrator)
#    - Runs the HTTP server
#    - Owns the SettlementVault contract
#    - Orchestrates all on-chain transactions
#    - Pays gas for all operations
FACILITATOR_PRIVATE_KEY=your_facilitator_private_key_here
FACILITATOR_ADDRESS=your_facilitator_address_here

# 2. SELLER (Asset Provider)
#    - Provides the on-chain assets (YPS tokens)
#    - Receives MockUSDC settlement tokens
#    - Can withdraw settled funds from vault
SELLER_PRIVATE_KEY=your_seller_private_key_here
SELLER_ADDRESS=your_seller_address_here

# 3. CLIENT (Buyer)
#    - Buys the on-chain assets
#    - Pays with MockEURC
#    - Receives YPS tokens
#    - Signs EIP-2612 permits (gasless)
CLIENT_PRIVATE_KEY=your_client_private_key_here
CLIENT_ADDRESS=your_client_address_here

# Mock Token Addresses (from P01 deployment)
MOCK_EURC_ADDRESS_POLYGON=0x...
MOCK_USDC_ADDRESS_POLYGON=0x...

# P02 Contract Addresses (from DeployAll.s.sol)
YPS_ADDRESS=0x...
SWAP_SIMULATOR_ADDRESS=0x...
SETTLEMENT_VAULT_ADDRESS=0x...

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=5000

# Pricing Configuration
ASSET_PRICE_USDC=100000000  # 100 USDC per YPS token (6 decimals)
DEFAULT_EUR_USD_RATE=1.05   # 1 EUR = 1.05 USD
PAYMENT_DEADLINE_SECONDS=3600  # 1 hour

